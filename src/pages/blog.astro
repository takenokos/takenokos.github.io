---
import { getCollection, type CollectionEntry } from "astro:content";
import DefaultLayout from "../layouts/DefaultLayout.astro";
import BlogContainer from "@components/preact/BlogContainer";

const allPosts: CollectionEntry<"blog">[] = await getCollection("blog");

const pageTitle: string = "My Blog";
const pageDescription: string =
  "Explore my journey learning Astro, with posts grouped by date and filtered by tags.";
---

<DefaultLayout pageTitle={pageTitle} description={pageDescription}>
  <BlogContainer allPosts={allPosts} client:load />
</DefaultLayout>
