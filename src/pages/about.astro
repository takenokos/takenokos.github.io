---
import IntroducLayout from "../layouts/IntroducLayout.astro";
import koraImg from "../images/team/kora.jpg";
import takenokosImg from "../images/team/takenokos.jpg";
const pageTitle = "About Us";
const teamMembers = [
  { name: "Kora", role: "Founder", image: koraImg.src },
  {
    name: "takenokos",
    role: "Lead Developer",
    image: takenokosImg.src,
  },
];
---

<IntroducLayout pageTitle={pageTitle}>
  <article>
    <section class="text-center">
      <h1
        class="text-4xl font-bold motion-opacity-in -motion-translate-y-in-50 motion-duration-1000 motion-ease-spring-bouncier"
      >
        About Us
      </h1>
      <p
        class="mt-4 text-xl motion-opacity-in -motion-translate-x-in-25 motion-duration-1000 motion-ease-spring-bouncier"
      >
        Discover the story behind our e-commerce journey
      </p>
    </section>
    <section
      class="mb-12 motion-opacity-in motion-translate-y-in-30 motion-duration-800 motion-delay-300 motion-ease-spring-bouncy transition-all"
    >
      <h2 class="text-3xl font-semibold text-slate-900 dark:text-white mb-6">
        Our Story
      </h2>
      <p class="text-slate-700 dark:text-slate-300 leading-relaxed">
        Founded in 2023, we started as a small team passionate about bringing
        high-quality products to customers worldwide. Our mission is to provide
        seamless shopping experiences with fast delivery and exceptional
        customer service.
      </p>
    </section>

    <section
      class="mb-12 motion-opacity-in motion-translate-y-in-30 motion-duration-800 motion-delay-600 motion-ease-spring-bouncy"
    >
      <h2 class="text-3xl font-semibold text-slate-900 dark:text-white mb-6">
        Our Team
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          teamMembers.map((member) => (
            <div class="bg-white dark:bg-slate-800 rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:scale-105">
              <img
                src={member.image}
                alt={member.name}
                class="w-full h-48 object-cover my-0!"
                loading="lazy"
              />
              <div class="p-3">
                <h3 class="text-xl font-semibold text-slate-900 dark:text-white my-0!">
                  {member.name}
                </h3>
                <p class="text-slate-600 dark:text-slate-400 my-0!">
                  {member.role}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <section
      class="text-center motion-opacity-in motion-translate-y-in-30 motion-duration-800 motion-delay-900 motion-ease-spring-bouncy"
    >
      <h2 class="text-3xl font-semibold text-slate-900 dark:text-white mb-6">
        Join Our Journey
      </h2>
      <p class="text-slate-700 dark:text-slate-300 mb-8">
        Subscribe to our newsletter for updates and exclusive offers.
      </p>
      <button
        class="cursor-pointer bg-indigo-500 hover:bg-indigo-600 dark:bg-indigo-600 dark:hover:bg-indigo-700 text-white py-3 px-6 rounded-full motion-opacity-in-0 motion-translate-y-in-25 motion-duration-500 motion-ease-spring-bouncy"
      >
        Shop Now
      </button>
    </section>
  </article>
</IntroducLayout>
