---
import IntroducLayout from "../layouts/IntroducLayout.astro";
import FAQ from "../components/preact/FAQ.tsx";

const pageTitle = "FAQ ";
const pageDescription =
  "Frequently asked questions about our products, shipping, and returns.";

const faqData = [
  {
    question: "What is your return policy?",
    answer:
      "You can return items within 30 days of purchase for a full refund.",
  },
  {
    question: "How long does shipping take?",
    answer:
      "Standard shipping takes 3-5 business days, depending on your location.",
  },
  {
    question: "Do you offer international shipping?",
    answer: "Yes, we ship to over 50 countries worldwide.",
  },
];
---

<IntroducLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <section>
    <div class="container mx-auto px-4 lg:px-0">
      <h1
        class="text-3xl font-bold text-center mb-8 motion-opacity-in -motion-translate-y-in-50 motion-duration-1000 motion-ease-spring-bouncier"
      >
        Frequently Asked Questions
      </h1>
      <p
        class="text-center text-slate-600 dark:text-slate-300 mb-12 motion-opacity-in -motion-translate-x-in-25 motion-duration-1000 motion-ease-spring-bouncier"
      >
        Find answers to common questions about our e-commerce site.
      </p>

      <FAQ
        faqData={faqData}
        accordion
        class="motion-opacity-in motion-translate-x-in"
        itemClass="border border-slate-200 dark:border-slate-700 rounded-lg"
        triggerClass="bg-slate-100 dark:bg-slate-700  hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors"
        client:load
      />
    </div>
  </section>
</IntroducLayout>
